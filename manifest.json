{
    "manifest_version": 2, 
    "name": "Zuora Extension",
    "version": "1.1.0",
    "author": "Baptiste BIEBER",
    "description": "Add functionalities to Zuora!",
    "homepage_url" : "https://github.com/baptistebieber/zuora-extension",
    "icons": {
        "16": "img/icon-16.png",
        "32": "img/icon-32.png",
        "48": "img/icon-48.png",
        "128": "img/icon-128.png"
    },
    "browser_action": {
        "default_icon": "img/icon-16.png"
    },
    "content_scripts" : [
        {
            "matches" : [
                "https://apisandbox.zuora.com/apps/*",
                "https://na.zuora.com/apps/*",
                "https://eu.zuora.com/apps/*",
                "https://sandbox.eu.zuora.com/apps/*"
            ],
            "css" : ["css/style.css"],
            "js" : ["js/jquery.min.js","js/menu.js"]
        },
        {
            "matches" : [
                "https://apisandbox.zuora.com/apps/DataSource.do*",
                "https://na.zuora.com/apps/DataSource.do*",
                "https://eu.zuora.com/apps/DataSource.do*",
                "https://sandbox.eu.zuora.com/apps/DataSource.do*"
            ],
            "css" : [],
            "js" : ["js/data-sources.js"]
        }
    ],
    "permissions": [ 
        "cookies",
        "tabs", 
        "https://apisandbox.zuora.com/*",
        "https://na.zuora.com/*",
        "https://eu.zuora.com/*",
        "https://sandbox.eu.com/*"
    ]
}
